@import '../../template/template.wxss';


/**reading.wxss**/
.reading-background{
  position:fixed;
  top:0;
  left:0;
  width:100vw;
  height:100vh;
  z-index:-100;
}

.swiper{
  position:fixed;
  top:0;
  left:0;
  width:100vw;
  height:calc(100vh + 20px);
}
.swiper-item{
  height:calc(100vh + 20px);
