.catalog{
  position:fixed;
  top:0;
  left:-260px;
  height:100vh;
  width:260px;
  transition:all 0.5s;
  background-color:#fff;
}
.catalog-show{
  top:0;
  left:0;
  box-shadow:0 0 15px #888;
}
.catalog-bg{
  position:absolute;
  width:1px;
  height:0px;
  transition:opacity 0.1s;
  z-index:-2;
  opacity:0;
}
.catalog-bg-show{
  position:absolute;
  height:100vh;
  width:100vw;
}
.catalog-title{
  display:block;
  height:44px;
  line-height:48px;
  text-align:center;
  padding-top:20px;
  /*background-color:#aaf;*/
  background:linear-gradient(to right, #1c80ff, #05AFF2);
  color:#fff;
}
.catalog-type{
  position:relative;
  display:flex;
  height:32px;
  line-height:32px;
  padding: 5px 15px;
  text-align:center;
}
.catalog-button{
  height:100%;
  width:50%;
}
.button-select{
  position:absolute;
  height:calc(100% - 10px);
  width:calc(50% - 15px);
  /*background-color:#aaf;*/
  background:linear-gradient(to right, #1c80ff, #05AFF2);
  border-radius:21px;
  transform: translateX(115px);
  transition:all 0.5s;
  z-index:-10;
}
.catalog-scroll-c{
  position:relative;
  width:100%;
  height:calc(100% - 104px);
  overflow:hidden;
}
.catalog-bookmarks{
  position:absolute;
  height:100%;
  left:0px;
  transition:all 0.5s;
}
.bookmarks-hidden{
  left:-260px;
}
.catalog-page-number{
  position:absolute;
  height:100%;
  left:0;
  transition:all 0.5s;
}
.pageNum-hidden{
  left:260px;
}
.catalog-item{
  height:32px;
  line-height:32px;
  align-items:center;
  display:flex;
  background-color:transparent;
  /*transition:all 0.1s;*/
}
.catalog-current{
  /*background-color:#aaf;*/
  background:linear-gradient(to right, #1c80ff, #05AFF2);
  color:#fff;
}
.none-bookmark-tip{
  width:260px;
  height:80px;
}
.item-icon{
  height:20px;
  width:20px;
  margin: 0 10px 0 15px;
}
.item-title{
  display:block;
  width:200px;
}
.b-delete-icon{
  position:absolute;
  width:20px;
  height:20px;
  padding:6px calc((100% - 20px) / 2) 6px  calc((100% - 20px) / 2);
  opacity:0;
  transition: all 0.5s;
}
.b-delete{
  opacity:1;
  background-color:#f00;
}
.b-moving{
  opacity:0.6;
  z-index:1000;
  background-color:#ccc;
}
.b-deleted{
  opacity:0;
  height:0;
  overflow:hidden;
}


.loading-an{
  position:fixed;
  top:200px;
  left:60px;
  width:45px;
  height:0px;
  display:none;
}
.loading{
  position:relative;
  display:inline-block;
  width:10px;
  height:10px;
  border-radius:5px;
  background-color:#888;
  opacity:0.62;
  margin:0 2.5px;
}
#l-1{
  animation:loading3 1s infinite;
}
#l-2{
  animation:loading2 1s infinite;
}
#l-3{
  animation:loading 1s infinite;
}

@keyframes loading{
  0%{
    transform:scale(0.6);
  }
  20%{
    transform:scale(1);
  }
  50%{
    transform:scale(1.6);
  }
  80%{
    transform:scale(1);
  }
  100%{
    transform:scale(0.6);
  }
}
@keyframes loading2{
  0%{
    transform:scale(1);
  }
  20%{
    transform:scale(1.6);
  }
  50%{
    transform:scale(1);
  }
  80%{
    transform:scale(0.6);
  }
  100%{
    transform:scale(1);
  }
}
@keyframes loading3{
  0%{
    transform:scale(1.6);
  }
  20%{
    transform:scale(1);
  }
  50%{
    transform:scale(0.6);
  }
  80%{
    transform:scale(1);
  }
  100%{
    transform:scale(1.6);
  }
}

.page-loading{
